      | regex_replace('^50$', ''),
    'min_tx_interval': pol.attributes.minTxIntvl | default('')
      | regex_replace('^50$', ''),
  }] %}
{% endfor %}
{%- set _ = tnpolns.policies.__setitem__('bfd_interface_policies',
  bfdintpol.bfd_interface_policies) -%}

